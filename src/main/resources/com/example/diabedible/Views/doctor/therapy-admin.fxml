<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.diabedible.controller.TherapyAdminController"
      spacing="10" alignment="CENTER" prefWidth="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10">
        <Label text="Paziente:"/>
        <ComboBox fx:id="patientSelector" prefWidth="200"/>
    </HBox>

    <TextField fx:id="therapyNameField" promptText="Nome terapia"/>
    <TextField fx:id="medNameField" promptText="Nome farmaco"/>
    <TextField fx:id="doseField" promptText="Dose"/>
    <Button text="Aggiungi farmaco" onAction="#onAddMedication"/>
    <ListView fx:id="medList"/>
    <Button text="Prescrivi" onAction="#onPrescribe"/>
</VBox>
