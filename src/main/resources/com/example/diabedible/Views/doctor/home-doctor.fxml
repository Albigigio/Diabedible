<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.diabedible.controller.HomeDoctorController">

    <!-- Barra superiore -->
    <top>
        <HBox spacing="20" style="-fx-padding: 15; -fx-background-color: #f0f0f0;">
            <Text fx:id="welcomeText" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutBtn" text="Logout" onAction="#handleLogout" />
        </HBox>
    </top>

    <!-- Contenuto principale -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Selettore paziente -->
            <HBox spacing="10">
                <Label text="Seleziona paziente:"/>
                <ComboBox fx:id="patientSelector" prefWidth="200"/>
            </HBox>

            <!-- Bottone segnalazioni glicemia -->
            <Button text="Segnalazioni glicemia"
                onAction="#onAlerts"
                style="-fx-font-weight: bold; -fx-background-color: #ffdddd;"/>

            <!--  Nuova label per lo stato della terapia -->
            <Label fx:id="statusLabel" text="Stato terapia"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <!-- Grafico glicemia -->
            <LineChart fx:id="bloodSugarChart" title="Andamento Glicemia"
                       prefHeight="500" prefWidth="900">
                <xAxis>
                    <CategoryAxis label="Data"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Glicemia (mg/dL)"/>
                </yAxis>
            </LineChart>

            <!-- bottone per visualizzare il trend -->
            <Button text="Trend glicemia" onAction="#onTrends"/>
           
           <!-- Bottone per la terapia -->
            <Button text="Gestisci terapia"
            onAction="#onDoctorTherapy"/>

            <!-- Checklist del paziente -->
            <VBox spacing="10">
                <Label text="Checklist giornaliera del paziente:" style="-fx-font-weight: bold;" />
                <VBox fx:id="checklistContainer" spacing="5"
                      style="-fx-background-color: #e9e9e9; -fx-padding: 10; -fx-background-radius: 5;" />
            </VBox>

            <!-- âœ… Sintomi registrati -->
            <VBox spacing="10">
                <Label text="Sintomi registrati:" style="-fx-font-weight: bold;" />
                <ListView fx:id="symptomList" prefHeight="150"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
