<VBox spacing="12" style="-fx-padding: 20;"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.diabedible.controller.PatientTrendsController">

    <Label text="Trend Glicemia Paziente" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Paziente:"/>
        <ComboBox fx:id="patientSelector" prefWidth="220"/>
        <Button text="Aggiorna" onAction="#onRefresh"/>
    </HBox>

    <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #f4f4f4; -fx-background-radius: 8;">
        <Label text="Ultimi 7 giorni" style="-fx-font-weight: bold;"/>
        <Label fx:id="weeklyLabel" text="—"/>
    </VBox>

    <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #f4f4f4; -fx-background-radius: 8;">
        <Label text="Ultimi 30 giorni" style="-fx-font-weight: bold;"/>
        <Label fx:id="monthlyLabel" text="—"/>
    </VBox>

</VBox>
