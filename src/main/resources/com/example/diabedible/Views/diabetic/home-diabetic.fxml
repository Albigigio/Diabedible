<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.ColorAdjust?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.diabedible.controller.HomeDiabeticController"
            stylesheets="@/com/example/diabedible/styles.css">

    <fx:define>
        <Font fx:id="welcomeFont" size="18" name="System Bold" />
        <Font fx:id="titleFont" size="20" name="System Bold" />
        <Font fx:id="statsTitleFont" size="16" name="System Bold" />
    </fx:define>

    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-background-radius: 10;">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Text fx:id="welcomeText" text="Welcome back, John!" fill="WHITE" font="$welcomeFont"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="notificationBtn" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="notificationIcon" fitHeight="24" fitWidth="24" preserveRatio="true">
                            <image>
                                <Image url="/com/example/diabedible/Views/diabetic/notification.png" backgroundLoading="true"/>
                            </image>
                            <effect>
                                <ColorAdjust brightness="0.0"/>
                            </effect>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>

    <left>
        <VBox fx:id="navigation" style="-fx-background-color: #34495e; -fx-background-radius: 10;" prefWidth="200">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <VBox fx:id="profileBox" alignment="CENTER" spacing="5">
                    <children>
                        <ImageView fx:id="profileImage" fitHeight="80" fitWidth="80"
                                   image="/com/example/diabedible/Views/diabetic/profile.jpg"/>
                        <Text fx:id="profileName" text="John Doe" fill="WHITE"/>
                        <Text fx:id="profileType" text="Type 2 Diabetes" fill="LIGHTGRAY"/>
                    </children>
                </VBox>
                <Separator/>
                <Button fx:id="dashboardBtn" text="Dashboard" styleClass="nav-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20"
                                   image="/com/example/diabedible/Views/diabetic/home.png"/>
                    </graphic>
                </Button>
                <Separator/>
                <Button fx:id="logoutBtn" text="Logout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                        maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <center>
        <TabPane fx:id="mainContent">
            <tabs>
                <Tab fx:id="bloodSugarTab" text="Blood Sugar" closable="false">
                    <content>
                        <VBox spacing="20" padding="20">
                            <Text text="Blood Sugar Monitoring" font="$titleFont"/>
                            <LineChart fx:id="bloodSugarChart">
                                <xAxis>
                                    <NumberAxis label="Days"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Blood Sugar (mg/dL)" lowerBound="50" upperBound="300" tickUnit="25"/>
                                </yAxis>
                            </LineChart>
                            <HBox spacing="10">
                                <TextField fx:id="readingField" promptText="Inserisci valore glicemia"/>
                                <DatePicker fx:id="datePicker"/>
                                <Button text="Aggiungi" onAction="#handleAddReading"/>
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <right>
        <VBox fx:id="quickStats" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10;"
              prefWidth="250" spacing="15" padding="20">
            <children>
                <Text text="Quick Stats" font="$statsTitleFont"/>
                <!-- altri box in futuro -->
            </children>
        </VBox>
    </right>
</BorderPane>
