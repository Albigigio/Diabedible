<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.diabedible.controller.HomeDiabeticController"
            stylesheets="@/com/example/diabedible/styles.css">

    <fx:define>
        <Font fx:id="welcomeFont" size="18" name="System Bold" />
        <Font fx:id="titleFont" size="20" name="System Bold" />
        <Font fx:id="statsTitleFont" size="16" name="System Bold" />
    </fx:define>

    <top>
        <HBox id="topBar" fx:id="topBar" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-background-radius: 10;">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Text id="welcomeText" fx:id="welcomeText" text="Welcome back, John!" fill="WHITE"
                      font="$welcomeFont"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button id="notificationBtn" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView id="notificationIcon" fitHeight="30" fitWidth="30"
                                   image="@/images/notification.png"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>

    <left>
        <VBox id="navigation" style="-fx-background-color: #34495e; -fx-background-radius: 10;"
              prefWidth="200">
            <padding>
                <Insets all="20"/>
            </padding>
            <children>
                <VBox id="profileBox" alignment="CENTER" spacing="5">
                    <children>
                        <ImageView id="profileImage" fitHeight="80" fitWidth="80"
                                   image="@/images/profile.png"/>
                        <Text id="profileName" text="John Doe" fill="WHITE"/>
                        <Text id="profileType" text="Type 2 Diabetes" fill="LIGHTGRAY"/>
                    </children>
                </VBox>
                <Separator/>
                <Button id="dashboardBtn" styleClass="nav-button" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" image="@/images/home.png"/>
                    </graphic>
                </Button>
                <!-- se vogliamo addare altri bottoni di navigazione -->
                <Separator/>
                <Button id="logoutBtn" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                        maxWidth="Infinity" text="Logout"/>
            </children>
        </VBox>
    </left>

    <center>
        <TabPane id="mainContent">
            <tabs>
                <Tab id="bloodSugarTab" text="Blood Sugar" closable="false">
                    <content>
                        <VBox spacing="20" padding="20">
                            <Text text="Blood Sugar Monitoring" font="$titleFont"/>
                            <LineChart id="bloodSugarChart">
                                <xAxis>
                                    <NumberAxis label="Days"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Blood Sugar (mg/dL)" lowerBound="50" upperBound="300" tickUnit="25"/>
                                </yAxis>
                            </LineChart>
                            <!-- se vogliamo addare altre stat -->
                        </VBox>
                    </content>
                </Tab>
                <!-- se vogliamo addare altre tab -->
            </tabs>
        </TabPane>
    </center>

    <right>
        <VBox id="quickStats" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10;"
              prefWidth="250" spacing="15" padding="20">
            <children>
                <Text text="Quick Stats" font="$statsTitleFont"/>
                <!-- altri box per possibili upgrade -->
            </children>
        </VBox>
    </right>
</BorderPane>
