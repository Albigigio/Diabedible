<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.diabedible.controller.LoginController" spacing="10" alignment="CENTER">
          <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
          </padding>

    <Label text="Diabedible - Accesso" style="-fx-font-size: 20; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Nome utente (es. ID123, DR456)" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Accedi" onAction="#handleLogin" />
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />

</VBox>